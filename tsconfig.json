{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@Config/*": ["./config/*"],
      "@Helpers/*": ["./helpers/*"],
      "@Middleware/*": ["./middleware/*"],
      "@Models/*": ["./models/*"],
      "@Routes/*": ["./routes/*"],
      "@Validation/*": ["./validation/*"]
    }
  },
  "exclude": [
    "client",
    "prod-build"
  ]
}